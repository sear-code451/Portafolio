    <div class="contact_form">

        <div class="formulario">      
          <h1>Formulario de contacto</h1>
            <h3>Escríbenos y en breve los pondremos en contacto contigo</h3>
      
      
              <form id="contact-form" action="http://localhost:8080/contact" method="post">       
      
                
                    <p class="paragraph-knowledge">
                        <label for="nombre" class="content-label">Nombre
                          <span class="obligatorio">*</span>
                        </label>
                        <input type="text" name="introducir_nombre" id="nombre" required="obligatorio" placeholder="Escribe tu nombre">
                    </p>
                  
                    <p class="paragraph-knowledge">
                        <label for="email" class="content-label">Email
                          <span class="obligatorio">*</span>
                        </label>
                        <input type="email" name="introducir_email" id="email" required="obligatorio" placeholder="Escribe tu Email">
                    </p>
                
                    <p class="paragraph-knowledge">
                        <label for="telephone" class="content-label">Teléfono
                        </label>
                        <input type="tel" name="introducir_telefono" id="telephone" placeholder="Escribe tu teléfono">
                    </p>    
                  
                    <p class="paragraph-knowledge">
                        <label for="password" class="content-label">Password
                        </label>
                        <input type="text" name="enter_password" id="password" placeholder="Enter your password">
                    </p>    
                  
                    <p class="paragraph-knowledge">
                        <label for="asunto" class="content-label">Asunto
                            <span class="obligatorio">*</span>
                        </label>
                        <input type="text" name="introducir_asunto" id="asunto" required="obligatorio" placeholder="Escribe un asunto">
                    </p>    
                  
                    <p class="paragraph-knowledge">
                        <label for="mensaje" class="content-label">Mensaje
                            <span class="obligatorio">*</span>
                        </label>                     
                        <textarea name="introducir_mensaje" class="texto_mensaje" id="mensaje" required="obligatorio" placeholder="Deja aquí tu comentario..."></textarea> 
                    </p>                    
                  
                    <button  name="enviar_formulario" id="enviar"><p>Enviar</p></button>
      
                    <p class="aviso">
                      <span class="obligatorio"> * </span>Los campos son obligatorios.
                    </p>          
                
              </form>
        </div>  
    </div>

